{% extends 'base.html.twig' %}

{% block title %}
    Connexion
{% endblock %}
{% block main %}
    <div class="bg-star flex flex-col justify-center w-full ">

        <h1 class="font-jedi green text-3xl mb-16 md:text-7xl self-center">Connexion</h1>

        <form method="post" class="w-10/12 md:w-8/12 lg:w-1/2 mx-auto flex flex-col self-center">
            {% if error %}
                <div class="alert alert-danger text-white">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        
            {% if app.user %}
                <div class="mb-3 text-white">
                    Vous etes connect√© en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
        
            <label for="inputEmail" class="leading-7 text-white">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="my-2 py-3 px-3" autocomplete="email" required autofocus>
            
            <label for="inputPassword" class="leading-7 text-white">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="my-2 py-3 px-3" autocomplete="current-password" required>
        
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            <button class="btn flex mx-auto bg-green text-white hover:bg-gray-200 hover:text-black rounded text-base mt-4 p-4" type="submit">
                Connexion
            </button>
        </form>
    </div>

{% endblock %}
