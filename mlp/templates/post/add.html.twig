{% extends 'base.html.twig' %}

{% block title %}Ajouter un message
{% endblock %}

{% block main %}

<main class="text-gray-600 body-font relative bg-star">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-12">
      <h1 class="sm:text-5xl text-2xl font-medium title-font mb-4 green font-jedi">Envoyer un message</h1>
    </div>
	{{ form_start(form)}}
    <div class="lg:w-1/2 md:w-2/3 mx-auto">
      <div class="flex flex-wrap -m-2">
        <div class="p-2 w-1/2">
          <div class="relative">
            	{{ form_label(form.author) }}
				{{ form_widget(form.author) }}
          </div>
        </div>
        <div class="p-2 w-1/2">
          <div class="relative">
            	{{ form_label(form.receiver) }}
				{{ form_widget(form.receiver) }}
          </div>
        </div>
        <div class="p-2 w-full">
          <div class="relative">
  			{{ form_label(form.content) }}
			{{ form_widget(form.content)}}
        </div>
        <div class="p-2 w-full">
          {{ form_widget(form.submit)}}
        </div>
      </div>
    </div>
	{{ form_end(form)}}
  </div>
</main>
{% endblock %}
